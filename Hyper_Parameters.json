{
    "Sound": {
        "Spectrogram_Dim": 513,
        "Mel_Dim": 80,
        "Frame_Length": 50,
        "Frame_Shift": 12.5,
        "Sample_Rate": 16000,
        "Max_Abs_Mel": 4
    },

    "Token_JSON_Path": "Token_Index_Dict.ENG.json",

    "GST": {
        "Use": true,
        "Reference_Encoder": {
            "Conv": {
                "Filters": [32, 32, 64, 64, 128, 128],
                "Kernel_Size": [3, 3, 3, 3, 3, 3],
                "Strides": [2, 2, 2, 2, 2, 2]
            },
            "RNN": {
                "Size": 128
            },
            "Dense": {
                "Size": 128
            }
        },
        "Style_Token": {
            "Size": 256,
            "Embedding": {
                "Size": 256
            },
            "Attention": {
                "Head": 4,
                "Size": 128
            }
        }
    },

    "Tacotron": {
        "Encoder": {
            "Embedding": {
                "Size": 256
            },
            "Prenet": {
                "Size": [256, 128],
                "Dropout_Rate": 0.5
            },
            "CBHG": {
                "Conv_Bank": {
                    "Stack_Count": 16,
                    "Filters": 128
                },
                "Pool": {
                    "Pool_Size": 2,
                    "Strides": 1
                },
                "Conv1D": {
                    "Filters": [128, 128],
                    "Kernel_Size": [3, 3]
                },
                "Highwaynet": {
                    "Count": 4,
                    "Size": 128
                },
                "RNN": {
                    "Size": 128,
                    "Zoneout": 0.0
                }
            }
        },        
        "Decoder": {
            "Prenet": {
                "Size": [256, 128],
                "Dropout_Rate": 0.5
            },
            "Pre_RNN": {                
                "Size": [256],
                "Zoneout": 0.0
            },
            "Attention": {
                "Type": ["SMA"],
                "Size": [512]
            },
            "Post_RNN": {
                "Count": 2,
                "Size": 256,
                "Zoneout": 0.0
            },
            "Inference_Step_Reduction": 5,
            "Max_Step": 800
        }
    },

    "Vocoder_Taco1": {
        "CBHG": {
            "Conv_Bank": {
                "Stack_Count": 8,
                "Filters": 256
            },
            "Pool": {
                "Pool_Size": 2,
                "Strides": 1
            },
            "Conv1D": {
                "Filters": [128, 128],
                "Kernel_Size": [3, 3]
            },
            "Highwaynet": {
                "Count": 4,
                "Size": 128
            },
            "RNN": {
                "Size": 256,
                "Zoneout": 0.0
            }
        },
        "Griffin-Lim_Iter": 60
    },

    "Train": {
        "Pattern_Path": "C:/Pattern/GST.Pattern.LJVCTK",
        "Metadata_File": "METADATA.PICKLE",
        "Batch_Size": 88,
        "Pattern_Sorting": true,
        "Min_Wav_Length": 500,
        "Max_Wav_Length": 10000,
        "Max_Pattern_Queue": 50,
        "Initial_Learning_Rate": 1e-3,
        "Min_Learning_Rate": 1e-5,
        "ADAM": {
            "Beta1": 0.9,
            "Beta2": 0.999,
            "Epsilon": 1e-4
        },
        "Use_L2_Loss": false,
        "Inference_Timing": 1000,
        "Checkpoint_Save_Timing": 1000,

        "Sequential_Pattern": false
    },

    "Use_Mixed_Precision": true,
    "Inference_Path": "D:/GST.Results/GST.LJVCTK.SMA.R5/Inference",
    "Checkpoint_Path": "D:/GST.Results/GST.LJVCTK.SMA.R5/Checkpoint",
    "Device": "0"
    
